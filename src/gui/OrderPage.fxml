<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXListView?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="main-background" stylesheets="@../resources/stylesheets/StyleSheet.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.OrderPageController">
   <children>
      <AnchorPane prefHeight="400.0" prefWidth="400.0">
         <children>
            <JFXTextField fx:id="orderName" labelFloat="true" layoutX="14.0" layoutY="54.0" prefHeight="25.0" prefWidth="165.0" promptText="Customer Name" AnchorPane.topAnchor="54.0" />
            <JFXComboBox fx:id="orderQty" labelFloat="true" layoutX="13.0" layoutY="105.0" promptText="Quantity">
               <tooltip>
                  <Tooltip text="Number of Stock Ordered" />
               </tooltip></JFXComboBox>
            <Label layoutX="260.0" layoutY="21.0" text="Select Items" />
            <JFXListView layoutX="14.0" layoutY="216.0" prefHeight="130.0" prefWidth="165.0" styleClass="primary-color-light" stylesheets="@../resources/stylesheets/StyleSheet.css" />
            <JFXButton fx:id="orderConfirm" layoutX="50.0" layoutY="360.0" text="Confirm Order" />
            <JFXButton fx:id="orderAdd" layoutX="13.0" layoutY="187.0" text="Add to Order" />
            <DatePicker fx:id="orderDate" layoutX="10.0" layoutY="17.0" promptText="Date of Order">
               <tooltip>
                  <Tooltip text="Date Order was Placed by Client" />
               </tooltip></DatePicker>
            <Label fx:id="orderAlert" layoutX="105.0" layoutY="191.0" opacity="0.0" prefHeight="17.0" prefWidth="38.0" styleClass="label-login-alert" />
            <JFXTextField fx:id="orderType" labelFloat="true" layoutX="96.0" layoutY="105.0" prefHeight="25.0" prefWidth="138.0" promptText="Metal">
               <tooltip>
                  <Tooltip text="Type of Metal (i.e. Copper, Steel, Aluminum etc.)" />
               </tooltip>
            </JFXTextField>
            <JFXComboBox fx:id="orderLength" labelFloat="true" layoutX="14.0" layoutY="147.0" promptText="Length">
               <tooltip>
                  <Tooltip text="Biggest Dimension of Stock" />
               </tooltip>
            </JFXComboBox>
            <JFXComboBox fx:id="orderWidth" labelFloat="true" layoutX="87.0" layoutY="147.0" promptText="Width">
               <tooltip>
                  <Tooltip text="Second Biggest Dimension of Stock (Only Applies to Flat Stock)" wrapText="true" />
               </tooltip>
            </JFXComboBox>
            <JFXComboBox fx:id="orderDiameter" labelFloat="true" layoutX="156.0" layoutY="147.0" promptText="Diameter">
               <tooltip>
                  <Tooltip text="Diameter/Height of Stock" />
               </tooltip>
            </JFXComboBox>
         </children>
      </AnchorPane>
      <Label layoutX="464.0" layoutY="14.0" text="Order History" />
      <JFXListView layoutX="400.0" layoutY="37.0" prefHeight="363.0" prefWidth="200.0" styleClass="primary-color-light">
         <effect>
            <DropShadow />
         </effect>
      </JFXListView>
   </children>
</AnchorPane>
