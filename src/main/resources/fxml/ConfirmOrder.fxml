<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0" styleClass="main-background"
            stylesheets="@../stylesheets/StyleSheet.css" xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="main.java.controllers.ConfirmOrderController">
    <children>
        <TableView fx:id="confirmView" layoutX="30.0" layoutY="59.0" prefHeight="282.0" prefWidth="540.0">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="147.0" text="ID"/>
                <TableColumn fx:id="nameColumn" prefWidth="160.0" text="Name"/>
                <TableColumn fx:id="priceColumn" prefWidth="106.0" text="Price"/>
                <TableColumn fx:id="inStockColumn" prefWidth="64.0" text="In Stock"/>
                <TableColumn fx:id="quantityColumn" onEditCommit="#changeQuantityCellEditEvent" prefWidth="62.0"
                             text="Quantity"/>
            </columns>
            <effect>
                <DropShadow/>
            </effect>
        </TableView>
        <JFXButton layoutX="30.0" layoutY="346.0" onAction="#confirmOrder" styleClass="button-standard"
                   stylesheets="@../stylesheets/StyleSheet.css" text="Confirm Order">
            <effect>
                <DropShadow/>
            </effect>
        </JFXButton>
        <Label layoutX="388.0" layoutY="345.0" styleClass="small-label-text" text="Total Price: "/>
        <Label fx:id="priceLabel" layoutX="484.0" layoutY="345.0" prefHeight="27.0" prefWidth="93.0"
               styleClass="small-label-text"/>
        <Label fx:id="errorLabel" layoutX="206.0" layoutY="6.0" prefHeight="17.0" prefWidth="223.0"
               styleClass="label-login-alert" stylesheets="@../stylesheets/StyleSheet.css" textAlignment="CENTER"/>
        <Pane prefHeight="50.0" prefWidth="600.0" styleClass="secondary-color">
            <effect>
                <DropShadow/>
            </effect>
            <children>
                <Label layoutX="198.0" layoutY="3.0" styleClass="big-label-text" text="Confirm Order"/>
            </children>
        </Pane>
    </children>
</AnchorPane>
