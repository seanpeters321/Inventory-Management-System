                <TableColumn fx:id="priceColumn" prefWidth="100.0" text="Price"/>
            </columns>
            <cursor>
                <Cursor fx:constant="DEFAULT"/>
            </cursor>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <tooltip>
                <Tooltip text="Selected Stock to Change Quantity"/>
            </tooltip>
        </TableView>
        <JFXButton fx:id="addStock" layoutX="541.0" layoutY="76.0" onAction="#setAddStock" text="+"/>
        <JFXButton fx:id="subStock" layoutX="741.0" layoutY="77.0" onAction="#setSubStock" text="-"/>
        <Label fx:id="errorLabel" layoutX="590.0" layoutY="81.0" prefHeight="17.0" prefWidth="127.0"
